atomic array number a[5];

type AtomicClass
<<
  atomic number ato;

  func incrementAtomicVar: number value : void
  <<
    invoke ato->fetch_add:value: ;
  >>

  func getAtom : null : atomic int
  <<
    return in->ato ;
  >>

  func isEven : null : bool
  <<
    return ~(in->ato) ;
  >>
>>

func global: number tno : void
<<
  AtomicClass y;
  for[int i=0| (i<5) | i += 1]
  <<
    op: i # " In thread : " # tno;
    invoke y->incrementAtomicVar: (i+1) : ;
  >>
>>

task ttsk: null
<<
  invoke global:tid:
>>

start
<<
  make parallel start:null: ;
  decimal a = get->time;
>>
