func dist : pt ab, pt b: decimal 
<<
    decimal d = ((ab->x - b->x)*(ab->x - b->x)) ;
    
    bool check = true ;
    atomic number a = 0;
    when[check]
    <<
        return (d*0.5); 
    >>
    default
    <<
        return a; 
    >>
>>

task temp : array pt temp , number size 
<<
    number thr = tid, i = 0;
    
    number ii = 0 ;
    repeat[(i < size - 1)] 
    <<
    
        decimal s = invoke dist: temp[1], temp[2] : ;
        
        op: s -> "log.txt";
        op: "log.txt";
        i += 1;
    >>
>>


